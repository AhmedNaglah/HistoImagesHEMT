.h-image-body
  .h-image-controls-container

    ul.nav.nav-tabs
      li.active
        a.h-close(href='#h-close-control', data-toggle='tab', title='Close')
          i.icon-cancel
      li
        a(href='#h-analysis-control', data-toggle='tab', title='Analyses')
          i.icon-cog-alt
      li
        a(href='#h-annotation-control', data-toggle='tab', title='Annotations')
          i.icon-pencil
      li
        a(href='#h-image-info-control', data-toggle='tab', title='Information')
          i.icon-info

    .tab-content
      #h-close-control.active
      #h-analysis-control.tab-pane
        | Open analysis button
      #h-annotation-control.tab-pane
        | Show annotations
      #h-image-info-control.tab-pane
        | Show image metadata




  .h-image-view-body
    .h-image-view-container
