extends ./panel.pug

block title
  | #[span.icon-pencil] #{title}

block content
  .btn-group.btn-justified.btn-group-sm
    .btn-group.btn-group-sm
      button.h-draw.btn.btn-default(type='button', data-type='point')
        | #[span.icon-circle-empty] Point
    .btn-group.btn-group-sm
      button.h-draw.btn.btn-default(type='button', data-type='rectangle')
        | #[span.icon-check-empty] Rectangle
    .btn-group.btn-group-sm
      button.h-draw.btn.btn-default(type='button', data-type='polygon')
        | #[span.icon-star-empty] Polygon

  if elements.length
    .h-elements-container
      each element in elements
        .h-element(data-id=element.id)
          span.icon-cog.h-edit-element(data-toggle='tooltip', title='Change style')
          span.icon-cancel.h-delete-element(data-toggle='tooltip', title='Remove')
          span.h-element-label #{element.type}

    button.btn.btn-primary.h-save-annotation(type='button') Save

