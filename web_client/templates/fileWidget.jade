extends ./widget.jade

block input
  .input-group
    if path
      - value = '/' + path.join('/') + '/' + value.name();
    else if value.name
      - value = value.name();
    +input(title, type, id, value)(
      placeholder='Choose a file...'
      readonly=true)
    span.input-group-btn
      button.btn.btn-default.h-select-file-button(type='button')
        i.icon-folder-open
