.h-annotation
    span
        cursor pointer
    .h-toggle-annotation
        float left
        margin-right 0.5em

    .h-annotation-right
        float right

    a
        color #333
    .h-annotation-name
        width 180px
        display inline-block
        text-overflow ellipsis
        white-space nowrap
        overflow hidden

.h-annotation.h-active-annotation
  background-color #c5cae9 !important
  border-radius 3px

.h-create-annotation
  float right

.h-annotation:hover
    background-color #eee
